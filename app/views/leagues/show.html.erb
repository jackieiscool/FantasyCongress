<h1><%= @league.name %></h1>

<h4>Teams</h4>
<ul>
<% @teams.each do |team| %>
  <li><%= team.name + ' : ' + team.user.email %></li>
<% end %>
</ul>

<button id="join_league">Join League</button>

<%= form_for [@league, @team], :html => {:class => "new_team"} do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %><br/>
  </p>
  <%= f.submit %>
<% end %>